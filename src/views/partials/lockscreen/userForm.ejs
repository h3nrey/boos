<div id="userForm__container"  class="disabled rounded container__flex text">
    <div id="login__container" class="aligned__centered container__flex fluid">
        <form  id="login__form" class="user__form rounded text container__flex container__direction__column bg bg__dark" method="post">
            <%- include("./inputWrapper", {inputId:"login__username", inputType:"text", labelText:"Username", inputName:"username"})  %> 
            <%- include("./inputWrapper", {inputId:"login__password", inputType:"password", labelText:"Senha", inputName:"password"})  %> 
    
            <div class="loggin__button__container Bmargin__top form__button__container container__flex justified__spaced aligned__centered">
                <%- include("../../components/button", {buttonId:"loggin_button", buttonType:"submit",buttonText:"<span>Logar</span>", specificClasses:"userForm__button dark bgLight apple text"})%>
                <a href="" class="dark text">Esqueci a senha</a>
                
            </div>
        </form>
        <div id="signup__sugestion__container" class="container__flex aligned__centered container__direction__column text Bmargin__bottom Mmargin__left sugestion__container fluid">
            <p class="text__semibold dark text__bgLight">não tem uma conta?</p>
            <%- include("../../components/button", {buttonId:"signup__sugestion__button",buttonType:"button", buttonText:"<span>Criar Conta<span/>", specificClasses:"userForm__button Mmargin__top bg bg__dark black dark text toggleContainer"})%> 
        </div>
    </div>
    
    <div id="signup__container" class="hidden Mmargin__top aligned__centered container__flex fluid">
        <form action="/" method="post" id="signup__form" class="user__form rounded bg bg__dark">
            <%- include("./inputWrapper", {inputId:"signup__username", inputType:"text", labelText:"Username", inputName:"username"})  %> 
            <%- include("./inputWrapper", {inputId:"signup__email", inputType:"email", labelText:"Email", inputName:"email"})  %> 
            <%- include("./inputWrapper", {inputId:"signup__password", inputType:"password", labelText:"Senha", inputName:"password"})  %>
            
            <div class="loggin__button__container container__flex justified__centered Bmargin__top">
                <!-- <button type="submit" id="loggin_button">Registrar</button> -->
                <%- include("../../components/button", {buttonId:"signup_button", buttonType:"submit",buttonText:"<span>Registrar</span>", specificClasses:"userForm__button dark bgLight apple text"})%>
            </div>
        </form>
        <div id="signup__sugestion__container" class="container__flex aligned__centered container__direction__column text Bmargin__bottom Mmargin__right sugestion__container fluid">
            <p class="text__semibold dark text__bgLight">Já tem uma conta?</p>
            <%- include("../../components/button", {buttonId:"login__sugestion__button",buttonType:"button", buttonText:"<span>Logar</span>", specificClasses:"userForm__button Mmargin__top bg bg__dark dark black text toggleContainer"})%> 
        </div>
    </div>
</div>

<script name="changing form action">
    const logginButton = document.querySelector("button#loggin_button");
    logginButton.addEventListener("click", () => {
        const userInput = document.querySelector("form#login__form input#login__username__input");
        const loginForm = document.querySelector("form#login__form").action = `/${userInput.value}`
    })
</script>

<script name="toggle forms">
    const userformContainer = document.querySelector("#userForm__container");
    const forms = [document.querySelector("#login__container"), document.querySelector("#signup__container")];
    const buttons = document.querySelectorAll("button.toggleContainer");

    buttons.forEach(button => {
        button.addEventListener("click", () => {
            forms.forEach(form => {
                form.classList.toggle("hidden");
            })
        })
    })
</script>